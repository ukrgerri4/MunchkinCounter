             xmlns:fa="clr-namespace:Core.Utils;assembly=Core"
             mc:Ignorable="d"
             x:Class="TcpMobile.Views.DicePage"
             BackgroundColor="#CC000000"
             CloseWhenBackgroundIsClicked="True">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="#FFF3E5" Padding="30">
        <Button Clicked="Throw"
                Text="{Binding DiceValue}"
                Style="{StaticResource iconButton}"
                FontSize="192"
                TextColor="#7E8A48"/>
    </StackLayout>
