<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <!--<item name="windowNoTitle">true</item>-->
    
    <item name="android:windowBackground">@color/colorPrimaryDark</item>

    <!--We will be using the toolbar so no need to show ActionBar-->
    <!--<item name="windowActionBar">false</item>-->
    
    
    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/colorPrimaryDark</item>
    
    <!-- там где время -->
    <item name="colorPrimaryDark">@color/colorBlack</item>
    <!-- там где время -->
    
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">@color/colorPrimaryDark</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->

    <!-- 3 кнопки внизу -->
    <item name="android:navigationBarColor">@color/colorBlack</item>
    <item name="android:navigationBarDividerColor">@color/colorPrimaryDark</item>
    <item name="android:windowLightNavigationBar">false</item>
    <!-- 3 кнопки внизу -->
    
    <item name="windowActionModeOverlay">false</item>

    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>

    <item name="android:textAllCaps">false</item>

    <!-- disable pull on top or bot on listView -->
    <item name="android:overScrollMode">never</item>

    <!-- LIST VIEW -->
    <!--<item name="android:colorPressedHighlight">@color/colorPrimary</item>-->
    <!--<item name="android:colorLongPressedHighlight">@color/colorPrimary</item>-->
    <!--<item name="android:colorFocusedHighlight">@color/colorPrimaryDark</item>-->
    <!--<item name="android:colorControlActivated">@color/colorPrimaryDark</item>-->
    
    <item name="android:colorActivatedHighlight">@color/colorSecondary</item>
    <item name="android:colorControlHighlight">@color/colorSecondary</item>

    <!--<item name="android:colorActivatedHighlight">@color/colorPrimaryDark</item>
    <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>-->
    <!-- LIST VIEW -->
  </style>

  <!--<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#FF4081</item>
  </style>-->
</resources>
